@model List<MVCCrud.Models.ViewModels.TablaViewModel>
@{
    ViewBag.Title = "Mis Datos";
}

<h2>ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px;">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Fecha de Nacimiento</th>
                <th></th>
            </tr>
            @foreach (var element in Model)
            {
        <tr>
            <td>@element.Id</td>
            <td>@element.Nombre</td>
            <td>@element.Correo</td>
            <td>@element.Fecha_nacimiento</td>
            <td>
                <a class="btn btn-default" href="~/Tabla/Editar/@element.Id">editar</a>
                <a class="btn btn-danger" href="~/Tabla/Eliminar/@element.Id">eliminar</a>
            </td>
        </tr>
            }
        </table>
    </div>

</div>
